<Window x:Class="WindowsMediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyWindowsMediaPlayer" Height="400" Width="600">
    <Grid Margin="0,0,0,0">
        <MediaElement x:Name="MediaReader" Height="300" VerticalAlignment="Top" Margin="0,0,0,0" HorizontalAlignment="Stretch"  Width="600"  LoadedBehavior="Manual" Stretch="Fill"  UnloadedBehavior="Manual"/>
        <Button x:Name="My_Button_Play" Content="Play" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Margin="0,300,0,0" Click="Button_Play"/>
        <Button x:Name="Load" Content="Load" HorizontalAlignment="Left" VerticalAlignment="center" Width="75" Margin="50,300,0,0" Click="Button_Load"/>
    </Grid>
</Window>
